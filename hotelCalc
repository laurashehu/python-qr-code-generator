    pass

# Create the main window
root = tk.Tk()
root.title("Hotel Stay Price Calculator")

# Create a frame for the buttons
button_frame = tk.Frame(root)
button_frame.pack(padx=20, pady=10)

# Add Travel Agency button
add_button = tk.Button(button_frame, text="Add Travel Agency", command=add_travel_agency)
add_button.pack(side="left", padx=5)

# Choose Existing Travel Agency button
choose_button = tk.Button(button_frame, text="Choose Existing Travel Agency", command=choose_travel_agency)
choose_button.pack(side="left", padx=5)

# Run the main event loop
root.mainloop()
